<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.RootLayoutController">
   <top>
      <MenuBar prefHeight="25.0" prefWidth="304.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Datei">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open *.gka file" />
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox prefHeight="54.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <Pane prefHeight="54.0" prefWidth="700.0">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="14.0" layoutY="15.0" prefHeight="24.0" prefWidth="83.0" text="Source node">
                     <font>
                        <Font name="Times New Roman" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="sourceNode" layoutX="107.0" layoutY="15.0" promptText="Start" />
                  <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="266.0" layoutY="15.0" prefHeight="24.0" prefWidth="81.0" text="Target node">
                     <font>
                        <Font name="Times New Roman" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="targetNode" layoutX="356.0" layoutY="15.0" promptText="Ziel" />
                  <Button fx:id="run" alignment="CENTER" contentDisplay="CENTER" layoutX="552.0" layoutY="5.0" mnemonicParsing="false" onAction="#handleRun" prefHeight="45.0" prefWidth="111.0" text="Run" textAlignment="CENTER">
                     <font>
                        <Font name="SF Distant Galaxy" size="14.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </HBox>
   </bottom>
</BorderPane>
